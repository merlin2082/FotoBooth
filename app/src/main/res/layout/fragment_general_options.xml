<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.divianaci.fotobooth.fragment.GeneralOptionsFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/options_general" />

    <LinearLayout
        android:id="@+id/general_options_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/general_options_timer_delay_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/general_options_timer_delay" />

        <Spinner
            android:id="@+id/general_options_timer_delay_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Spinner>


    </LinearLayout>

</FrameLayout>
